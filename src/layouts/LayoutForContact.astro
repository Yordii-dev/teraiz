---
import "@/index.css";
import { getContent, getLang } from "@/contexts/PageContext";
import ContactPage from "@/components/ContactPage";

const lang = getLang();
const content = getContent();
const CONTENT = content.cta;
const { title } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <meta
      name="description"
      content="Teraiz desarrolla software a medida para inmobiliarias. Digitaliza tu negocio con soluciones PropTech, CRM inmobiliario, automatización de procesos y plataformas personalizadas."
    />
    <meta
      name="keywords"
      content="software inmobiliario, CRM inmobiliario, desarrollo de software a medida, digitalización de inmobiliarias, PropTech, automatización inmobiliaria, sistema para inmobiliarias"
    />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#002b56" />

    <link
      rel="canonical"
      href={lang === "es"
        ? "https://teraiz.com/"
        : `https://teraiz.com/${lang}`}
    />
    <link rel="alternate" hreflang="es" href="https://teraiz.com/" />
    <link rel="alternate" hreflang="en" href="https://teraiz.com/en/" />
    <link rel="alternate" hreflang="fr" href="https://teraiz.com/fr/" />
    <link rel="alternate" hreflang="x-default" href="https://teraiz.com/" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={lang === "es"
        ? "https://teraiz.com/"
        : `https://teraiz.com/${lang}/`}
    />
    <meta
      property="og:title"
      content="Teraiz - Software Inmobiliario a Medida"
    />
    <meta
      property="og:description"
      content="Digitaliza tu empresa inmobiliaria con soluciones de software personalizadas, CRM y automatización."
    />
    <meta property="og:image" content="https://teraiz.com/og-image.jpg" />

    <!-- Twitter (opcional, solo si quieres compartir en Twitter) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:url"
      content={lang === "es"
        ? "https://teraiz.com/"
        : `https://teraiz.com/${lang}/`}
    />
    <meta
      name="twitter:title"
      content="Teraiz - Software Inmobiliario a Medida"
    />
    <meta
      name="twitter:description"
      content="Digitaliza tu empresa inmobiliaria con soluciones de software personalizadas, CRM y automatización."
    />
    <meta name="twitter:image" content="https://teraiz.com/og-image.jpg" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Teraiz",
        "url": "https://teraiz.com",
        "logo": "https://teraiz.com/favicon-32x32.png",
        "description": "Software inmobiliario personalizado para empresas del sector. CRM, automatización y más.",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "PE"
        }
      }
    </script>
  </head>

  <body>
    <div class="min-h-screen">
      <ContactPage
        client:load
        content={getContent()}
        textBtn={CONTENT.ctaText}
        sizeBtn="lg"
        classBtn="bg-brand-secondary hover:bg-brand-secondary/90 text-brand-primary px-10 py-4 text-lg font-bold shadow-xl hover:shadow-2xl transition-all duration-300 group"
        visibleIcon={true}
      />
    </div>
  </body>
</html>
