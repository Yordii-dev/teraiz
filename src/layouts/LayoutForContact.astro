---
import "@/index.css";
import { getContent, getLang } from "@/contexts/PageContext";
import ContactPage from "@/components/ContactPage";
import WhatsAppButton from "@/components/WhatsAppButton";
import Header from "@/components/Header.astro";

const lang = getLang();
const content = getContent();
const CONTENT = content.cta;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{content.page.contact.title}</title>

    <meta name="description" content={content.page.contact.metas.description} />
    <meta name="keywords" content={content.page.contact.metas.keywords} />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#002b56" />

    <link rel="canonical" href={`https://teraiz.com/${lang}/contact`} />

    <link rel="alternate" hreflang="es" href="https://teraiz.com/es/contact" />
    <link rel="alternate" hreflang="en" href="https://teraiz.com/en/contact" />
    <link rel="alternate" hreflang="fr" href="https://teraiz.com/fr/contact" />
    <link
      rel="alternate"
      hreflang="x-default"
      href="https://teraiz.com/es/contact"
    />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://teraiz.com/${lang}/contact`} />
    <meta
      property="og:title"
      content={content.page.contact.metas.toShared.openGraph.title}
    />
    <meta
      property="og:description"
      content={content.page.contact.metas.toShared.openGraph.description}
    />
    <meta property="og:image" content="https://teraiz.com/og-image.jpg" />

    <!-- Twitter (opcional, solo si quieres compartir en Twitter) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={`https://teraiz.com/${lang}/contact`} />
    <meta
      name="twitter:title"
      content={content.page.contact.metas.toShared.twitter.title}
    />
    <meta
      name="twitter:description"
      content={content.page.contact.metas.toShared.twitter.description}
    />
    <meta name="twitter:image" content="https://teraiz.com/og-image.jpg" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Teraiz" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ContactPage",
        "mainEntity": {
          "@type": "Organization",
          "name": "Teraiz",
          "url": "https://teraiz.com",
          "logo": "https://teraiz.com/favicon-32x32.png",
          "contactPoint": {
            "@type": "ContactPoint",
            "contactType": "customer support",
            "availableLanguage": ["es", "en", "fr"]
          }
        }
      }
    </script>
  </head>

  <body>
    <div class="min-h-screen">
      <Header hideNav={true} />

      <ContactPage
        client:load
        lang={lang}
        content={getContent()}
        textBtn={CONTENT.ctaText}
        sizeBtn="lg"
        classBtn="bg-brand-secondary hover:bg-brand-secondary/90 text-brand-primary px-10 py-4 text-lg font-bold shadow-xl hover:shadow-2xl transition-all duration-300 group"
        visibleIcon={true}
      />
      <WhatsAppButton client:load content={content} />
    </div>
  </body>
</html>
