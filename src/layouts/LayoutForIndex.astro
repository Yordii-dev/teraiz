---
import "@/index.css";
import { getContent, getLang } from "@/contexts/PageContext";
import Header from "@/components/Header.astro";
import Hero from "@/components/Hero.astro";
import Services from "@/components/Services.astro";
import Testimonials from "@/components/Testimonials.astro";
import MapSection from "@/components/MapSection.astro";
import ObjectionsSection from "@/components/ObjectionsSection.astro";
import FAQSection from "@/components/FAQSection.astro";
import WhatsAppButton from "@/components/WhatsAppButton";
import Cta from "@/components/Cta.astro";
import Footer from "@/components/Footer.astro";
import GoogleAnalytics from "@/components/GoogleAnalytics.astro";
import MetaPixel from "@/components/MetaPixel.astro";

const lang = getLang();
const content = getContent();
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{content.page.index.title}</title>

    <meta name="description" content={content.page.index.metas.description} />
    <meta name="keywords" content={content.page.index.metas.keywords} />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#002b56" />

    <link
      rel="canonical"
      href={lang === "es"
        ? "https://teraiz.com/"
        : `https://teraiz.com/${lang}`}
    />
    <link rel="alternate" hreflang="es" href="https://teraiz.com/" />
    <link rel="alternate" hreflang="en" href="https://teraiz.com/en/" />
    <link rel="alternate" hreflang="fr" href="https://teraiz.com/fr/" />
    <link rel="alternate" hreflang="x-default" href="https://teraiz.com/" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={lang === "es"
        ? "https://teraiz.com/"
        : `https://teraiz.com/${lang}/`}
    />
    <meta
      property="og:title"
      content={content.page.index.metas.toShared.openGraph.title}
    />
    <meta
      property="og:description"
      content={content.page.index.metas.toShared.openGraph.description}
    />
    <meta property="og:image" content="https://teraiz.com/og-image.jpg" />

    <!-- Twitter (opcional, solo si quieres compartir en Twitter) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:url"
      content={lang === "es"
        ? "https://teraiz.com/"
        : `https://teraiz.com/${lang}/`}
    />
    <meta
      name="twitter:title"
      content={content.page.index.metas.toShared.twitter.title}
    />
    <meta
      name="twitter:description"
      content={content.page.index.metas.toShared.twitter.description}
    />
    <meta name="twitter:image" content="https://teraiz.com/og-image.jpg" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Teraiz" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Teraiz",
        "url": "https://teraiz.com",
        "logo": "https://teraiz.com/favicon-32x32.png",
        "description": "Software inmobiliario personalizado para empresas del sector. CRM, automatización y más.",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "PE"
        }
      }
    </script>

    <GoogleAnalytics />
    <MetaPixel />
  </head>

  <body>
    <div class="min-h-screen">
      <Header />
      <Hero />
      <Services />
      <Testimonials />
      <MapSection />
      <ObjectionsSection />
      <FAQSection />
      <Cta />
      <Footer />
      <WhatsAppButton client:load content={content} />
    </div>
  </body>
</html>
