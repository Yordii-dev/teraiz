---
import { useTranslation } from "@/contexts/LanguageContext";
import { Star, Quote } from "lucide-react";

import { getContent, getLang } from "@/contexts/PageContext";
import type { langType } from "@/types/languages";
const CONTENT = getContent().testimonies;
const CONTENT_AUTHORITY = getContent().authority;

const LANG = getLang() as langType;
---

<section id="testimonies" class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    {/* Header */}
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-brand-primary mb-4">
        {CONTENT.title.text}
        <span class="text-brand-secondary"> {CONTENT.title.emphasis}</span>
      </h2>
      <p class="text-xl text-gray-600 leading-relaxed">
        {CONTENT.description}
      </p>
    </div>

    {/* Testimonials Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
      {
        CONTENT.list.map((testimonial) => (
          <div class="bg-gray-50 p-8 rounded-2xl relative group hover:bg-white hover:shadow-xl transition-all duration-300 border border-transparent hover:border-brand-secondary/20">
            {/* Quote mark */}
            {/* <div class="absolute -top-4 -left-4 w-8 h-8 bg-brand-secondary rounded-full flex items-center justify-center">
              <Quote className="h-4 w-4 text-white" />
            </div> */}

            {/* Country flag */}
            <div class="absolute -top-2 -right-2 text-2xl">
              {testimonial.country}
            </div>

            {/* Rating */}
            <div class="flex items-center mb-4">
              {[...Array(testimonial.rating)].map((_, i) => (
                <Star className="h-4 w-4 text-yellow-400 fill-current" />
              ))}
            </div>

            {/* Content */}
            <p class="text-gray-700 mb-6 leading-relaxed">
              {testimonial.content}
            </p>

            {/* Results badge */}
            <div class="bg-brand-secondary/10 text-brand-primary px-4 py-2 rounded-full text-sm font-semibold mb-6 inline-block">
              ðŸ“ˆ {testimonial.results}
            </div>

            {/* Author */}
            <div class="flex items-center">
              <img
                src={testimonial.image}
                alt={testimonial.name}
                class="w-12 h-12 rounded-full object-cover mr-4"
              />
              <div>
                <h4 class="font-semibold text-brand-primary">
                  {testimonial.name}
                </h4>
                <p class="text-sm text-gray-600">{testimonial.role}</p>
                <p class="text-xs text-gray-500">{testimonial.company}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    {/* Stats Section */}
    <div
      class="bg-gradient-to-r from-brand-primary to-brand-primary/90 rounded-2xl p-8 sm:p-12 text-white"
    >
      <div class="text-center mb-8">
        <h3 class="text-2xl sm:text-3xl font-bold mb-4">
          {CONTENT_AUTHORITY.title}
        </h3>
        <p class="text-white/90 max-w-2xl mx-auto">
          {CONTENT_AUTHORITY.description}
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 text-center">
        {
          CONTENT_AUTHORITY.list.map((stat) => (
            <div class="group">
              <div class="flex items-center justify-center mb-4">
                <div class="w-16 h-16 bg-brand-secondary/20 rounded-full flex items-center justify-center group-hover:bg-brand-secondary/30 transition-colors">
                  {stat.icon && (
                    <stat.icon className="h-8 w-8 text-brand-secondary" />
                  )}
                </div>
              </div>
              <div class="text-4xl sm:text-5xl font-bold text-brand-secondary mb-2">
                {stat.title}
              </div>
              <p class="text-white/90">{stat.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
