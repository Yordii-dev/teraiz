---
import { useState } from "react";
import { ChevronDown, ChevronUp } from "lucide-react";
import { useTranslation } from "@/contexts/LanguageContext";
import { getContent, getLang } from "@/contexts/PageContext";
import type { langType } from "@/types/languages";
const CONTENT = getContent().faqs;
const LANG = getLang() as langType;
---

<section id="faqs" class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-brand-primary mb-4">
        {CONTENT.title}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {CONTENT.description}
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="space-y-4">
        {
          CONTENT.list.map((faq) => (
            <details class="bg-gray-50 rounded-xl overflow-hidden group">
              <summary class="cursor-pointer px-8 py-6 flex items-center justify-between hover:bg-gray-100 transition-colors">
                <h3 class="text-lg font-semibold text-brand-primary pr-4">
                  {faq.question}
                </h3>
                <svg
                  class="chevron-icon h-5 w-5 text-brand-secondary transition-transform duration-300"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"
                  />
                </svg>
              </summary>
              <div class="px-8 pb-6 pt-4 border-t border-gray-200">
                <p class="text-gray-600 leading-relaxed">{faq.answer}</p>
              </div>
            </details>
          ))
        }
      </div>
    </div>
  </div>
</section>
