---
import { useTranslation } from "@/contexts/LanguageContext";
import ContactForm from "./ContactForm";
import { Button } from "./ui/button";
import { getContent, getLang } from "@/contexts/PageContext";
import type { langType } from "@/types/languages";
import BtnCta from "./BtnCta.astro";
const CONTENT = getContent().services;
const LANG = getLang() as langType;
---

<section id="servicios" class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-brand-primary mb-4">
        {CONTENT.title}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {CONTENT.description}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {
        CONTENT.list.map((service) => (
          <div class="bg-gray-50 p-8 rounded-xl hover:shadow-lg transition-all duration-300 group">
            <div class="w-12 h-12 bg-brand-secondary/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-brand-secondary/20 transition-colors">
              <service.icon className="h-6 w-6 text-brand-secondary" />
            </div>

            <h3 class="text-xl font-semibold text-brand-primary mb-4">
              {service.title}
            </h3>

            <p class="text-gray-600 mb-6">{service.description}</p>

            <ul class="space-y-2">
              {service.points.map((feature) => (
                <li class="flex items-center text-sm text-gray-600">
                  <div class="w-1.5 h-1.5 bg-brand-secondary rounded-full mr-3" />
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div class="text-center">
      <BtnCta
        lang={LANG}
        textBtn={CONTENT.ctaText}
        sizeBtn="lg"
        classBtn="bg-brand-primary hover:bg-brand-primary/90 text-white px-8 py-4"
        visibleIcon={false}
      />
    </div>
  </div>
</section>
